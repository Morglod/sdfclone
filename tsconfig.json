{
    "compilerOptions": {
        "lib": ["ES2020"],
        "target": "ES2015",
        "module": "Node16",
        "rootDir": "./src",
        "outDir": "./lib",
        "declaration": true,

        /* Bundler mode */
        "moduleResolution": "Node16",

        /* Linting */
        "skipLibCheck": true,
        "strict": true,
        "noFallthroughCasesInSwitch": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["test/**"]
}
